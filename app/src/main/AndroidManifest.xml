<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scentair.scentwave" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TestRunActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            </activity>
        <activity android:name=".MonitorActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ChangeOperatorActivity"></activity>
        <activity android:name=".CalibrationActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".PreferencesActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".PostTestResultActivity"
            android:screenOrientation="portrait"></activity>
    </application>
</manifest>
